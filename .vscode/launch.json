    "version": "0.2.0",
    "configurations": [
        {
            "name": "Deno: Run",
            "request": "launch",
            "type": "pwa-node",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--allow-net",
                "--import-map=./import_map.json",
                "--config",
                "tsconfig.json",
                "src/app.ts"
            ],
            "outputCapture": "std",
        },
        {
            "name": "Deno: Run(Rebuild)",
            "request": "launch",
            "type": "pwa-node",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "-r",
                "--allow-net",
                "--import-map=./import_map.json",
                "--config",
                "tsconfig.json",
                "src/app.ts"
            ],
            "outputCapture": "std",
        },
    ]
}